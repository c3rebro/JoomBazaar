				<field name="db_name" type="text" default="bazaar_db" label="Database Name" description="The database name." />
				<field name="secret" type="text" default="Of3lG8HGdf452nF653oFG93hGF93hf" label="Secret Key" description="The secret key for encryption." />
				<field name="smtp_from" type="text" default="borga@basar-horrheim.de" label="SMTP From" description="The SMTP from address." />
				<field name="smtp_from_name" type="text" default="borga@basar-horrheim.de" label="SMTP From Name" description="The SMTP from name." />
				<!-- Other fields -->
				<field name="modal_margin" type="text" default="100px" label="Modal-Top-Margin" description="Legen Sie den oberen Rand fÃ¼r Modals fest." />
